library("reshape2")
library("ggplot2")
library("base")
data<-read.table("2.txt",header=TRUE)
data<-as.matrix(data)
#mat = matrix(rnorm(20),5)
m = melt(data)
g = ggplot(m, aes(x=Var1, y=Var2, fill=value))+xlab('X-labels')+ylab("Y-labels")
g1=g+geom_tile()
g2=g1+geom_tile(color="white", size=0.001)+labs(title="Cluster 2"); print(g2)
